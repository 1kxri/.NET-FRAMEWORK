        private void button6_Click(object sender, EventArgs e)
        {
            try
            {
                double R = double.Parse(textBox21.Text);
                double h2 = double.Parse(textBox22.Text);

                double S3 = 2 * 3.14 * R * h2;

                textBox23.Text = S3.ToString("F4");

            }
            catch
            {
                MessageBox.Show("Введите числа", "Ошибка", MessageBoxButtons.OK, MessageBoxIcon.Error);
