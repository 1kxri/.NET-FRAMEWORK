                double S4 = 2 * 3.14 * R2 * l2;

                textBox26.Text = S4.ToString("F4");

            }
            catch
            {
                MessageBox.Show("Введите числа", "Ошибка", MessageBoxButtons.OK, MessageBoxIcon.Error);
